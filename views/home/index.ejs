<% layout('layouts/boilerplate') -%>
<h1>This is HOME PAGE</h1>
<h2>
    <% if (currentUser) { %>
        <%= currentUser %>
    <% } %>
</h2>

<div>
    <% if (successMsg) { %>
        <h1><%= successMsg %></h1>
    <% } %>
    <% if (errorMsg) { %>
        <h1><%= errorMsg %></h1>
    <% } %>
</div>

<form action="/search" method="GET">
    <input type="search" name="q" placeholder="Type to search" />
    <button type="submit">Search</button>
</form>